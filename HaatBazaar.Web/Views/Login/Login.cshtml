@model HaatBazaar.Web.Models.Login
<div class="container">
    <div class="row">
        <div class="container-fluid mb-5 mt-5">
            <div class="login-box">
                <div class="card card-outline card-primary">
                    <div class="card-body login-card-body">
                        <h3 class="register-box-msg fw-bold">Login</h3>
                        <form id="login-form" action="" method="post">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary()
                            <div class="input-group mb-4">
                                <div class="form-floating">
                                    <input asp-for="PhoneNumber" type="tel" class="form-control"
                                        placeholder="" required>
                                    <label asp-for="PhoneNumber">Phone Number</label>
                                    <span asp-validation-for="PhoneNumber"></span>
                                </div>
                                <div class="input-group-text"> <span class="bi bi-phone"></span> </div>
                            </div>
                            <div class="input-group mb-4">
                                <div class="form-floating">
                                    <input asp-for="Password" type="password" class="form-control"
                                        placeholder="" required>
                                    <label asp-for="Password">Password</label>
                                    <span asp-validation-for="Password"></span>
                                </div>
                                <div class="input-group-text"> <span class="bi bi-lock-fill"></span> </div>
                            </div> <!--begin::Row-->
                            <div class="row mb-2">
                                <div class="col-4">
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary">
                                            Sign In
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <p class="mb-1"> <a href="forgot-password.html">I forgot my password</a> </p>
                        <p class="mb-0">
                            <a class="text-center" asp-controller="login" asp-action="register">
                                Register a new membership
                            </a>
                        </p>
                    </div> <!-- /.login-card-body -->
                </div>
            </div>
        </div>
    </div>
</div>